<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="com.example.weather.viewmodel.DetailViewModel" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.DetailFragment"
        android:padding="16dp"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="58dp"
            android:layout_height="66dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_arrow_back_ios_24" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="190dp"
                android:text="UV index"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <ImageView
                android:layout_width="73dp"
                android:layout_height="39dp"
                android:src="@drawable/ic_cloudy" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="@{Double.toString(viewmodel.selectedDay.current.uv)}"
                android:textSize="25sp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="190dp"
                android:text="Sunrise"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <ImageView
                android:layout_width="73dp"
                android:layout_height="39dp"
                android:src="@drawable/ic_cloudy" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="@{viewmodel.selectedDay.current.cloud}"
                android:textSize="25sp"
                android:textColor="@color/black"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="190dp"
                android:text="Sunset"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <ImageView
                android:layout_width="73dp"
                android:layout_height="39dp"
                android:src="@drawable/ic_cloudy" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="@string/temp"
                android:textSize="25sp"
                android:textColor="@color/black"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="190dp"
                android:text="Wind"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <ImageView
                android:layout_width="73dp"
                android:layout_height="39dp"
                android:src="@drawable/ic_cloudy" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="@{viewmodel.selectedDay.current.wind_degree}"
                android:textSize="25sp"
                android:textColor="@color/black"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="120dp"
                android:text="Wind directions"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <ImageView
                android:layout_width="73dp"
                android:layout_height="39dp"
                android:src="@drawable/ic_cloudy" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="@{viewmodel.selectedDay.current.wind_dir}"
                android:textSize="25sp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="150dp"

                android:text="humidity"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <ImageView
                android:layout_width="73dp"
                android:layout_height="39dp"
                android:src="@drawable/ic_cloudy" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="@{viewmodel.selectedDay.current.humidity}"
                android:textSize="25sp"
                android:textColor="@color/black"/>
        </LinearLayout>

    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.weather.viewmodel.WeatherViewModel" />
        <variable
            name="hour"
            type="com.example.weather.model.Hour" />

    </data>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".ui.HomeFragment">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightGuideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_end="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topguideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="39dp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottomguideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_end="40dp" />

    <TextView
        android:id="@+id/cityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{viewModel.location.region}"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/rightGuideLine"
        app:layout_constraintTop_toBottomOf="@+id/topguideline" />

    <TextView
        android:id="@+id/countryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:paddingTop="0dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:paddingBottom="1dp"
        android:text="@{viewModel.location.country}"
        app:layout_constraintStart_toStartOf="@+id/rightGuideLine"
        app:layout_constraintTop_toBottomOf="@+id/cityName"/>









    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detail_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:paddingBottom="15dp"
        android:paddingTop="20dp"
        app:layout_constraintEnd_toStartOf="@id/leftGuideline"
        app:layout_constraintStart_toEndOf="@id/rightGuideLine"
        app:layout_constraintTop_toBottomOf="@id/countryName">


        <ImageView
            android:id="@+id/temp_iv"
            imgUrl="@{viewModel.current.condition.icon}"
            android:layout_width="246dp"
            android:layout_height="154dp"
            android:contentDescription="@string/sunny"
            android:src="@drawable/ic_sun"
            app:layout_constraintStart_toStartOf="@id/detail_layout"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/temp_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{Double.toString(viewModel.current.temp_c)}"
            android:textColor="@color/black"
            android:textSize="60sp"
            app:layout_constraintStart_toStartOf="@+id/detail_layout"
            app:layout_constraintEnd_toEndOf="@id/detail_layout"
            app:layout_constraintTop_toBottomOf="@id/temp_iv" />

        <TextView
            android:id="@+id/temp_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.current.condition.text}"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@id/detail_layout"
            app:layout_constraintStart_toStartOf="@id/detail_layout"
            app:layout_constraintTop_toBottomOf="@+id/temp_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        app:layout_constraintTop_toBottomOf="@id/detail_layout"
        app:layout_constraintStart_toStartOf="@+id/rightGuideLine"
        app:layout_constraintEnd_toStartOf="@id/leftGuideline"
        android:orientation="horizontal" >




        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            app:cardBackgroundColor="@color/lightBlue"
            android:id="@+id/humidity"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="25dp"
                android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_icons8_wet_50"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Humidity"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@{Double.toString(viewModel.current.humidity)}"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView

            app:cardBackgroundColor="@color/lightRed"
            android:id="@+id/pressure"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="25dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_icons8_pressure_50"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pressure"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@{Double.toString(viewModel.current.precip_mm)}"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView

            app:cardBackgroundColor="@color/lightgreen"
            android:id="@+id/wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="25dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_icons8_wind_50"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wind"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@{Double.toString(viewModel.current.wind_mph)}"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>



    <TextView
        android:id="@+id/today_btn"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="Next 24 hours"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:paddingTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/linear"
        app:layout_constraintStart_toEndOf="@id/rightGuideLine"
        app:layout_constraintEnd_toStartOf="@id/nextdays_btn"
        android:layout_marginStart="20dp" />

    <Button
        android:id="@+id/nextdays_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        style="?android:attr/borderlessButtonStyle"
        android:text="next days"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingBottom="15dp"
        app:layout_constraintStart_toEndOf="@id/today_btn"
        app:layout_constraintTop_toBottomOf="@+id/linear"
        app:layout_constraintEnd_toStartOf="@id/leftGuideline"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/temp_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:listitem="@layout/item_temp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toEndOf="@id/rightGuideLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nextdays_btn"
        app:layout_constraintBottom_toTopOf="@id/bottomguideline" />


</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
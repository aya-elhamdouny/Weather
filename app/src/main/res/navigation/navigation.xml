<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.weather.ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_nextDaysFragment"
            app:destination="@id/nextDaysFragment" />
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/nextDaysFragment"
        android:name="com.example.weather.ui.NextDaysFragment"
        android:label="fragment_next_days"
        tools:layout="@layout/fragment_next_days" >
        <action
            android:id="@+id/action_nextDaysFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_nextDaysFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.weather.ui.DetailFragment"
        android:label="DetailFragment"
        tools:layout="@layout/temp_details">

        <action
            android:id="@+id/action_detailFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <argument
            android:name="forecastday"
            app:argType="com.example.weather.model.Forecastday" />
        <action
            android:id="@+id/action_detailFragment_to_nextDaysFragment"
            app:destination="@id/nextDaysFragment" />
    </fragment>
</navigation>